@model Food
<td style="width:150px">
	<div class="btn-group" role="group">
		<a class="btn btn-primary text-white" asp-controller="Shopping" asp-action="AddToStock" asp-area="User" asp-route-Id="@Model.ID">
			<i class="fas fa-edit"></i>
		</a>

		@if (Model.IsInCart == false)
		{
			<a title="Add item to Cart!" class="btn btn-success text-white" asp-controller="Shopping" asp-action="AddToCart" asp-area="User" asp-route-Id="@Model.ID">
				<i class="fas fa-cart-plus"></i>
			</a>}

		@if (Model.IsInCart == true)
		{
			<a title="Already in Cart" class="btn btn-info text-white">
				<i class="fas fa-check-circle"></i>
			</a>
		
		}
		<a class="btn btn-danger text-white" asp-controller="Food" asp-action="Delete" asp-area="Admin" asp-route-Id="@Model.ID">

			@*
			<a class="btn btn-danger text-white" asp-controller="Shopping" asp-action="DeleteFoodTypeConf" asp-area="User" asp-route-Id="@Model">
			*@
			<i class="fas fa-trash-alt"></i>
		</a>
	</div>
</td>