@model Food
@{
	ViewData["Title"] = "Create FoodType";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Add Food Item to stock</h2>
<br />

<form method="post" asp-action="AddToStock" enctype="multipart/form-data">
	<input hidden asp-for="ID" />
	<div class="backgroundWhiteBorder row">
		<div class="col-8">
			<fieldset disabled>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Name" class="custom-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="Name" class="form-control"/>
					</div>
				</div>
			</fieldset>
		</div>

		<div class="col-8">
			<fieldset disabled>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Category.Name" class="custom-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="Category.Name" class="form-control" />
					</div>
				</div>
			</fieldset>
		</div>

		<div class="col-8">
			<fieldset disabled>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="SubCategory.Name" class="custom-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="SubCategory.Name" class="form-control" />
					</div>
				</div>
			</fieldset>
		</div>

		<div class="col-8">
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Description" class="custom-label"></label>
				</div>
				<div class="col-8">
					<input asp-for="Description" class="form-control" autofocus/>					
				</div>
			</div>
		</div>

		<div class="col-8">
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="BestBefore" class="custom-label"></label>
				</div>
				<div class="col-8">
					<input asp-for="BestBefore" class="form-control" />					
				</div>
			</div>
		</div>

		<div class="col-8">
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="QuantityLeft" class="custom-label"></label>
				</div>
				<div class="col-8">
					<select asp-for="QuantityLeft" class="custom-select mr-sm-2"
							asp-items="Html.GetEnumSelectList<QuantityLeft>()">
						<option value="">Please Select</option>
					</select>
				</div>
			</div>
		</div>

		<div class="col-8">
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="Unit" class="custom-label"></label>
				</div>
				<div class="col-8">
					<input asp-for="Unit" class="form-control" />					
				</div>
			</div>
		</div>

		<div class="col-8">
			<fieldset disabled>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Measurement" class="custom-label"></label>
					</div>
					<div class="col-8">
						<input asp-for="Measurement" class="form-control" />
					</div>
				</div>
			</fieldset>
		</div>
	</div>	


	<div id="submitbtn" class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Add to Stock</button>
		</div>
	</div>

</form>

@section Scripts{
	<script type="text/javascript">
        $(document).ready(function () {
            getSubCategory();
            $('#CategoryId').change(function () {
                getSubCategory();
            });
        });

        function getSubCategory() {
            var url = '@Url.Content("~/")' + "Admin/SubCategory/GetSubCategory";
            var ddlsoruce = '#CategoryId';
            $.getJSON(url, { id: $(ddlsoruce).val() }, function (data) {
                var items = '';
                $('#SubCategoryId').empty();
                $.each(data, function (i, subcategory) {
                    items += "<option value='" + subcategory.value + "'>" + subcategory.text + "</option>";
                });
                $('#SubCategoryId').html(items);
            })
        }
	</script>	
}
