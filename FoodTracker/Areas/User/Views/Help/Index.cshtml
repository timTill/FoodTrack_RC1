@using FoodTracker.Utility
@{
	ViewData["Title"] = "Help";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" backgroundWhite">
	<div class="row">
		<div class="col-6">
			<h2 class="text-dark"> Help</h2>
		</div>
		<div class="col-6 text-right">
		</div>
	</div>
	<br />

	<h3 class="text-dark">Current Version</h3>
	<ul style="list-style-type:none;">
		<li>
			<a class="text-dark underline">@SD.appVersion</a>
		</li>
	</ul>

	<h3 class="text-dark">Release Notes</h3>
	<ul style="list-style-type:none;">
		@foreach (var RN in SD.RNList)
		{
			<li>
				<a class="text-dark underline" href="~/RN/@($"FT_v_{RN}.txt") " download><u>Version @RN.Replace('_','.').</u></a>
			</li>

		}		
	</ul>

