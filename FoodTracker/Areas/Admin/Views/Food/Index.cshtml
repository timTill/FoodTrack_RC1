@model IEnumerable<Food>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<div class="border backgroundWhite">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info"> Food Type List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	<br />
	<div>
		@if (Model.Count() > 0)
		{
			<table class="table table-striped border">
				<tr class="table-secondary">
					<th>
						@Html.DisplayNameFor(m => m.Name)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.CategoryId)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.SubCategoryId)
					</th>
					<th class="text-center">
						@Html.DisplayNameFor(m => m.Measurement)
					</th>
					<th></th>
					<th></th>
				</tr>
				@foreach (var item in Model)
				{
				<tr>
					<td>
						@Html.DisplayFor(m => item.Name)
						@if (item.Priority== Priority.Magas)
						{
							<img src="~/img/reddot.png" style="width:18px;height:18px;margin-bottom:6px" />
						}
						@if (item.Priority == Priority.Közepes)
						{
							<img src="~/img/yellowdot.png" style="width:18px;height:18px;margin-bottom:6px" />
						}
						@if (item.Priority == Priority.Alacsony)
						{
							<img src="~/img/greendot.png" style="width:18px;height:18px;margin-bottom:6px" />
						}

					</td>					
					<td>
						@Html.DisplayFor(m => item.Category.Name)
					</td>
					<td>
						@Html.DisplayFor(m => item.SubCategory.Name)
					</td>
					<td class="text-center">
						@Html.DisplayFor(m => item.Measurement)
					</td>
					<td>
						<partial name="_TableButtonPartial" model="item.ID" />
					</td>
				</tr>
				}
			</table>
		}
		else
		{
			<p>No food type exists...</p>
		}
	</div>
</div>
